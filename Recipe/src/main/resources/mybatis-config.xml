<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<setting name="jdbcTypeForNull" value="VARCHAR"/>
	</settings>
	
	<typeAliases>
		<typeAlias type="kr.ac.kopo.recipe.model.Member" alias="member" />
		<typeAlias type="kr.ac.kopo.recipe.model.Cook" alias="cook"/>
		<typeAlias type="kr.ac.kopo.recipe.model.Step" alias="step"/>
		<typeAlias type="kr.ac.kopo.recipe.model.Notice" alias="notice"/>
		<typeAlias type="kr.ac.kopo.recipe.model.Question" alias="question"/>
	</typeAliases>

	<mappers>
		<mapper resource="mapper/member.xml"/>
		<mapper resource="mapper/cook.xml"/>
		<mapper resource="mapper/step.xml"/>
		<mapper resource="mapper/notice.xml"/>
		<mapper resource="mapper/question.xml"/>
	</mappers>
	
	
</configuration>